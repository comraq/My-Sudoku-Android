<resources>
  <!-- Base application theme. -->
  <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

  <style name="AppTheme" parent="AppBaseTheme">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:background">@color/colorToolBar</item>
  </style>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:background">@color/colorPopUp</item>
  </style>

  <style name="AppTheme.MainFrag">
    <item name="android:background">@color/colorMainFrag</item>
  </style>

  <style name="AppTheme.GameFrag">
    <item name="android:background">@color/colorGameFrag</item>
  </style>


</resources>
